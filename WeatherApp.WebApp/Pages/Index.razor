@page "/"

@using WeatherApp.Models;
@using WeatherApp.WebApp.Components

<PageTitle>Weather App</PageTitle>

<SearchCityComponent SearchForZipCodeChanged="GetWeatherForZip"></SearchCityComponent>
<CityForecastComponent SearchZip="@zipCode"></CityForecastComponent>

@code {
    private int zipCode = 54904;

    // User selected city in SearchCityComponent, we will update now update
    // the CityForecastComponent to show that city's forecast
    private void GetWeatherForZip(int newZipCode)
    {
        zipCode = newZipCode;
    }
}
